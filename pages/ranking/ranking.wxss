/* pages/ranking/ranking.wxss */
.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f8fafc;
}

.header {
  height: 112rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  border-bottom: 1rpx solid #e5e7eb;
  position: relative;
}

.back-btn {
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 12rpx 20rpx;
  border: 1rpx solid #e5e7eb;
  border-radius: 20rpx;
  background: #fff;
  font-size: 24rpx;
  color: #1f2328;
}

.header-title {
  font-weight: 700;
  font-size: 32rpx;
  color: #1f2328;
}

.content {
  flex: 1;
  overflow: auto;
  padding: 24rpx;
}

.sort-options {
  margin-bottom: 24rpx;
}

.sort-picker {
  padding: 20rpx 24rpx;
  border: 1rpx solid #e5e7eb;
  border-radius: 20rpx;
  background: #fff;
  font-size: 28rpx;
  color: #1f2328;
}

.picker-text {
  color: #1f2328;
}

.rank-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.rank-item {
  background: #fff;
  border: 1rpx solid #e5e7eb;
  border-radius: 24rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.rank-medal {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-weight: 700;
  font-size: 24rpx;
  flex-shrink: 0;
}

.rank-medal.gold {
  background: linear-gradient(135deg, #f59e0b, #fbbf24);
}

.rank-medal.silver {
  background: linear-gradient(135deg, #9ca3af, #e5e7eb);
  color: #111827;
}

.rank-medal.bronze {
  background: linear-gradient(135deg, #b45309, #f59e0b);
}

.rank-title {
  width: 176rpx;
  font-weight: 700;
  font-size: 26rpx;
  color: #1f2328;
  flex-shrink: 0;
}

.rank-bar {
  flex: 1;
  height: 16rpx;
  background: #eef2f7;
  border-radius: 999rpx;
  overflow: hidden;
}

.rank-fill {
  height: 100%;
  background: #60a5fa;
  transition: width 0.3s ease;
}

.rank-count {
  width: 120rpx;
  text-align: right;
  font-size: 24rpx;
  color: #6b7280;
  flex-shrink: 0;
}

.rank-badge {
  padding: 4rpx 12rpx;
  background: #f1f5f9;
  border-radius: 999rpx;
  font-size: 20rpx;
  color: #475569;
  flex-shrink: 0;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  color: #6b7280;
  font-size: 28rpx;
}

.footer {
  height: 80rpx;
  background: #ffffff;
  border-top: 1rpx solid #e5e7eb;
  display: flex;
  align-items: center;
  justify-content: center;
}

.time {
  font-size: 24rpx;
  color: #6b7280;
}
