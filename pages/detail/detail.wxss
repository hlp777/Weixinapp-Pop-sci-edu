/* pages/detail/detail.wxss */
.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f8fafc;
}

.header {
  height: 112rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  border-bottom: 1rpx solid #e5e7eb;
  position: relative;
}

.back-btn {
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 12rpx 20rpx;
  border: 1rpx solid #e5e7eb;
  border-radius: 20rpx;
  background: #fff;
  font-size: 24rpx;
  color: #1f2328;
}

.header-title {
  font-weight: 700;
  font-size: 28rpx;
  color: #1f2328;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.right {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
}

.share-btn {
  padding: 12rpx 20rpx;
  border: 1rpx solid #e5e7eb;
  border-radius: 20rpx;
  background: #fff;
  font-size: 24rpx;
  color: #1f2328;
}

.content {
  flex: 1;
  overflow: auto;
  padding: 24rpx;
}

.hero {
  width: 100%;
  height: 400rpx;
  border-radius: 24rpx;
}

.article {
  background: #fff;
  border: 1rpx solid #e5e7eb;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-top: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.article-title {
  font-size: 36rpx;
  font-weight: 800;
  color: #1f2328;
}

.article-meta {
  color: #6b7280;
  font-size: 26rpx;
}

.article-content {
  color: #1f2328;
  font-size: 28rpx;
  line-height: 1.6;
  white-space: pre-line;
}

.actions {
  display: flex;
  gap: 16rpx;
  margin-top: 16rpx;
}

.btn {
  padding: 16rpx 20rpx;
  border: 1rpx solid #e5e7eb;
  border-radius: 20rpx;
  background: #fff;
  font-size: 24rpx;
  color: #1f2328;
}

.section-title {
  font-weight: 700;
  font-size: 28rpx;
  color: #1f2328;
  margin-bottom: 16rpx;
}

.video-container {
  width: 100%;
  height: 360rpx;
  border-radius: 20rpx;
  overflow: hidden;
  background: #000;
}

.video {
  width: 100%;
  height: 100%;
}

.gallery {
  display: flex;
  gap: 16rpx;
  overflow-x: auto;
}

.gallery-item {
  flex-shrink: 0;
}

.gallery-image {
  width: 280rpx;
  height: 180rpx;
  border-radius: 20rpx;
}

.navigation {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
}

.footer {
  height: 80rpx;
  background: #ffffff;
  border-top: 1rpx solid #e5e7eb;
  display: flex;
  align-items: center;
  justify-content: center;
}

.time {
  font-size: 24rpx;
  color: #6b7280;
}
