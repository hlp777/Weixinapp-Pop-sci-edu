/* pages/profile/profile.wxss */
.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f8fafc;
}

.header {
  height: 112rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  border-bottom: 1rpx solid #e5e7eb;
}

.header-title {
  font-weight: 700;
  font-size: 32rpx;
  color: #1f2328;
}

.content {
  flex: 1;
  overflow: auto;
  padding: 24rpx;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
  background: #fff;
  border: 1rpx solid #e5e7eb;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.avatar {
  width: 144rpx;
  height: 144rpx;
  border-radius: 50%;
  background: #e5e7eb;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
  color: #6b7280;
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.username {
  font-size: 36rpx;
  font-weight: 800;
  color: #1f2328;
}

.badge {
  padding: 8rpx 16rpx;
  background: #f1f5f9;
  border-radius: 999rpx;
  font-size: 24rpx;
  color: #475569;
  align-self: flex-start;
}

.stats {
  display: flex;
  background: #fff;
  border: 1rpx solid #e5e7eb;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 800;
  color: #1677ff;
}

.stat-label {
  font-size: 24rpx;
  color: #6b7280;
}

.section {
  background: #fff;
  border: 1rpx solid #e5e7eb;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2328;
  margin-bottom: 24rpx;
}

.favorite-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.favorite-item {
  display: flex;
  gap: 20rpx;
  padding: 16rpx;
  border: 1rpx solid #f3f4f6;
  border-radius: 16rpx;
}

.favorite-thumb {
  width: 192rpx;
  height: 144rpx;
  border-radius: 16rpx;
}

.favorite-meta {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.favorite-title {
  font-weight: 700;
  font-size: 28rpx;
  color: #1f2328;
}

.favorite-desc {
  color: #6b7280;
  font-size: 26rpx;
  line-height: 1.3;
}

.favorite-stats {
  margin-top: auto;
  display: flex;
  justify-content: space-between;
  color: #6b7280;
  font-size: 24rpx;
}

.quiz-records {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.record-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 16rpx;
  border: 1rpx solid #f3f4f6;
  border-radius: 16rpx;
}

.record-score {
  font-size: 36rpx;
  font-weight: 800;
  color: #1677ff;
  min-width: 120rpx;
}

.record-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.record-stats {
  font-size: 26rpx;
  color: #1f2328;
}

.record-date {
  font-size: 24rpx;
  color: #6b7280;
}

.menu {
  background: #fff;
  border: 1rpx solid #e5e7eb;
  border-radius: 24rpx;
  padding: 0;
  margin-bottom: 24rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 32rpx;
  width: 48rpx;
  text-align: center;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: #1f2328;
}

.menu-arrow {
  font-size: 24rpx;
  color: #9ca3af;
}

.footer {
  height: 80rpx;
  background: #ffffff;
  border-top: 1rpx solid #e5e7eb;
  display: flex;
  align-items: center;
  justify-content: center;
}

.time {
  font-size: 24rpx;
  color: #6b7280;
}
