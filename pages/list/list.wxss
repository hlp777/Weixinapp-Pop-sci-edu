/* pages/list/list.wxss */
.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f8fafc;
}

.header {
  height: 112rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  border-bottom: 1rpx solid #e5e7eb;
  position: relative;
}

.back-btn {
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 12rpx 20rpx;
  border: 1rpx solid #e5e7eb;
  border-radius: 20rpx;
  background: #fff;
  font-size: 24rpx;
  color: #1f2328;
}

.header-title {
  font-weight: 700;
  font-size: 32rpx;
  color: #1f2328;
}

.content {
  flex: 1;
  overflow: auto;
  padding: 24rpx;
}

.search-bar {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.search-input {
  flex: 1;
  padding: 20rpx 24rpx;
  border: 1rpx solid #e5e7eb;
  border-radius: 20rpx;
  background: #fff;
  font-size: 28rpx;
}

.sort-picker {
  padding: 20rpx 24rpx;
  border: 1rpx solid #e5e7eb;
  border-radius: 20rpx;
  background: #fff;
  font-size: 28rpx;
  color: #1f2328;
}

.picker-text {
  color: #1f2328;
}

.list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.list-item {
  background: #fff;
  border: 1rpx solid #e5e7eb;
  border-radius: 24rpx;
  padding: 20rpx;
  display: flex;
  gap: 20rpx;
}

.thumb {
  width: 192rpx;
  height: 144rpx;
  border-radius: 20rpx;
}

.meta {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.title {
  font-weight: 700;
  font-size: 28rpx;
  color: #1f2328;
}

.desc {
  color: #6b7280;
  font-size: 26rpx;
  line-height: 1.3;
}

.stats {
  margin-top: auto;
  display: flex;
  justify-content: space-between;
  color: #6b7280;
  font-size: 24rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  color: #6b7280;
  font-size: 28rpx;
}

.footer {
  height: 80rpx;
  background: #ffffff;
  border-top: 1rpx solid #e5e7eb;
  display: flex;
  align-items: center;
  justify-content: center;
}

.time {
  font-size: 24rpx;
  color: #6b7280;
}
