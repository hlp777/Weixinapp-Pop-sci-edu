/* pages/home/home.wxss */
.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f8fafc;
}

.header {
  height: 112rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  border-bottom: 1rpx solid #e5e7eb;
  position: relative;
}

.header-title {
  font-weight: 700;
  font-size: 32rpx;
  color: #1f2328;
}

.right {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
}

.music-btn {
  padding: 12rpx 20rpx;
  border-radius: 999rpx;
  border: 1rpx solid #dbeafe;
  background: #fff;
  font-size: 24rpx;
  color: #1677ff;
}

.content {
  flex: 1;
  overflow: auto;
  padding: 24rpx;
}

.home-top {
  height: 20%;
  min-height: 240rpx;
  background: linear-gradient(135deg, #e0f2fe, #eff6ff);
  border-radius: 24rpx;
  padding: 24rpx;
  position: relative;
}

.home-title {
  font-size: 40rpx;
  font-weight: 800;
  color: #1f2328;
}

.home-sub {
  color: #2563eb;
  margin-top: 8rpx;
  font-size: 28rpx;
}

.user-info {
  margin-top: 12rpx;
  color: #374151;
  font-size: 26rpx;
}

.home-middle {
  height: 60%;
  margin-top: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.carousel {
  width: 100%;
  height: 300rpx;
  border-radius: 24rpx;
  overflow: hidden;
  background: #000;
}

.carousel-swiper {
  width: 100%;
  height: 100%;
}

.carousel-image {
  width: 100%;
  height: 100%;
}

.grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-auto-rows: 1fr;
  gap: 16rpx;
}

.cell {
  background: #fff;
  border: 1rpx solid #e5e7eb;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16rpx;
  gap: 12rpx;
  font-size: 24rpx;
  color: #1f2328;
}

.cell-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.space-icon {
  background: #fbbf24;
}

.agriculture-icon {
  background: #34d399;
}

.industry-icon {
  background: #60a5fa;
}

.quiz-icon {
  background: #f59e0b;
}

.ranking-icon {
  background: #8b5cf6;
}

.about-icon {
  background: #6b7280;
}

.footer {
  height: 80rpx;
  background: #ffffff;
  border-top: 1rpx solid #e5e7eb;
  display: flex;
  align-items: center;
  justify-content: center;
}

.time {
  font-size: 24rpx;
  color: #6b7280;
}
