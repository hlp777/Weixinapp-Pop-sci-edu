/* pages/admin/admin.wxss */
.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f8fafc;
}

.header {
  height: 112rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  border-bottom: 1rpx solid #e5e7eb;
}

.header-title {
  font-weight: 700;
  font-size: 32rpx;
  color: #1f2328;
}

.content {
  flex: 1;
  overflow: auto;
  padding: 24rpx;
}

.form-section {
  background: #fff;
  border: 1rpx solid #e5e7eb;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2328;
  margin-bottom: 24rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #1f2328;
  margin-bottom: 12rpx;
  font-weight: 600;
}

.input {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #e5e7eb;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #1f2328;
  box-sizing: border-box;
}

.picker-text {
  padding: 20rpx;
  border: 1rpx solid #e5e7eb;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #1f2328;
  background: #fff;
}

.btn {
  padding: 20rpx 40rpx;
  border: 1rpx solid #e5e7eb;
  border-radius: 20rpx;
  background: #fff;
  font-size: 28rpx;
  color: #1f2328;
  text-align: center;
  margin: 12rpx 0;
}

.btn.primary {
  background: #1677ff;
  color: #fff;
  border-color: #1677ff;
}

.quick-actions {
  background: #fff;
  border: 1rpx solid #e5e7eb;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.status {
  background: #f0f9ff;
  border: 1rpx solid #0ea5e9;
  border-radius: 16rpx;
  padding: 20rpx;
  font-size: 26rpx;
  color: #0c4a6e;
  text-align: center;
}
