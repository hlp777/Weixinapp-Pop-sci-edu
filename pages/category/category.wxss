/* pages/category/category.wxss */
.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f8fafc;
}

.header {
  height: 112rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  border-bottom: 1rpx solid #e5e7eb;
  position: relative;
}

.back-btn {
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 12rpx 20rpx;
  border: 1rpx solid #e5e7eb;
  border-radius: 20rpx;
  background: #fff;
  font-size: 24rpx;
  color: #1f2328;
}

.header-title {
  font-weight: 700;
  font-size: 32rpx;
  color: #1f2328;
}

.content {
  flex: 1;
  overflow: auto;
  padding: 24rpx;
}

.cards {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.card {
  background: #fff;
  border: 1rpx solid #e5e7eb;
  border-radius: 24rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.cell-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.space-icon {
  background: #fbbf24;
}

.agriculture-icon {
  background: #34d399;
}

.industry-icon {
  background: #60a5fa;
}

.card-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.card-title {
  font-weight: 700;
  font-size: 28rpx;
  color: #1f2328;
}

.badge {
  padding: 4rpx 16rpx;
  background: #f1f5f9;
  border-radius: 999rpx;
  font-size: 24rpx;
  color: #475569;
}

.btn {
  padding: 16rpx 20rpx;
  border: 1rpx solid #e5e7eb;
  border-radius: 20rpx;
  background: #fff;
  font-size: 24rpx;
  color: #1f2328;
}

.btn.primary {
  background: #1677ff;
  color: #fff;
  border-color: #1677ff;
}

.footer {
  height: 80rpx;
  background: #ffffff;
  border-top: 1rpx solid #e5e7eb;
  display: flex;
  align-items: center;
  justify-content: center;
}

.time {
  font-size: 24rpx;
  color: #6b7280;
}
