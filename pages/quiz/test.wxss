/* pages/quiz/test.wxss */
.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f8fafc;
}

.header {
  height: 112rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  border-bottom: 1rpx solid #e5e7eb;
}

.header-title {
  font-weight: 700;
  font-size: 32rpx;
  color: #1f2328;
}

.content {
  flex: 1;
  overflow: auto;
  padding: 24rpx;
}

.test-info {
  background: #fff;
  border: 1rpx solid #e5e7eb;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  font-size: 28rpx;
  color: #1f2328;
}

.test-questions {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.question-item {
  background: #fff;
  border: 1rpx solid #e5e7eb;
  border-radius: 24rpx;
  padding: 24rpx;
}

.question-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2328;
  margin-bottom: 16rpx;
}

.question-options {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.option {
  padding: 16rpx 20rpx;
  border: 1rpx solid #e5e7eb;
  border-radius: 16rpx;
  font-size: 26rpx;
  color: #1f2328;
}

.question-answer {
  font-size: 24rpx;
  color: #059669;
  font-weight: 600;
}

.test-actions {
  margin-top: 24rpx;
}

.btn {
  padding: 16rpx 32rpx;
  border: 1rpx solid #e5e7eb;
  border-radius: 20rpx;
  background: #fff;
  font-size: 28rpx;
  color: #1f2328;
}

.btn.primary {
  background: #1677ff;
  color: #fff;
  border-color: #1677ff;
}
