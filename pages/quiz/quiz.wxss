/* pages/quiz/quiz.wxss */
.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f8fafc;
}

.header {
  height: 112rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  border-bottom: 1rpx solid #e5e7eb;
}

.header-title {
  font-weight: 700;
  font-size: 32rpx;
  color: #1f2328;
}

.content {
  flex: 1;
  overflow: auto;
  padding: 24rpx;
}

.quiz-view {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.progress-container {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.progress-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2328;
}

.progress-bar {
  flex: 1;
  height: 16rpx;
  background: #e5e7eb;
  border-radius: 999rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #60a5fa, #34d399);
  transition: width 0.3s ease;
}

.question-container {
  background: #fff;
  border: 1rpx solid #e5e7eb;
  border-radius: 24rpx;
  padding: 24rpx;
}

.question-text {
  font-size: 36rpx;
  font-weight: 800;
  color: #1f2328;
  margin-bottom: 24rpx;
}

.options {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.option {
  padding: 20rpx 24rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 20rpx;
  background: #fff;
  font-size: 28rpx;
  color: #1f2328;
  text-align: left;
  transition: all 0.3s ease;
}

.option:active {
  transform: scale(0.98);
}

.controls {
  display: flex;
  gap: 16rpx;
  justify-content: center;
}

.btn {
  padding: 16rpx 32rpx;
  border: 1rpx solid #e5e7eb;
  border-radius: 20rpx;
  background: #fff;
  font-size: 24rpx;
  color: #1f2328;
}

.btn.primary {
  background: #1677ff;
  color: #fff;
  border-color: #1677ff;
}

.btn[disabled] {
  opacity: 0.5;
  color: #9ca3af;
}

.feedback {
  text-align: center;
  font-size: 28rpx;
  font-weight: 700;
  color: #1f2328;
  padding: 16rpx;
  background: #f0f9ff;
  border-radius: 20rpx;
}

.result-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.result-title {
  font-size: 36rpx;
  font-weight: 800;
  color: #1f2328;
}

.score {
  font-size: 72rpx;
  font-weight: 800;
  color: #1677ff;
}

.stats {
  font-size: 28rpx;
  color: #6b7280;
}

.analysis {
  width: 100%;
  background: #fff;
  border: 1rpx solid #e5e7eb;
  border-radius: 24rpx;
  padding: 24rpx;
}

.analysis-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2328;
  margin-bottom: 24rpx;
}

.analysis-item {
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.analysis-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.analysis-question {
  font-size: 28rpx;
  font-weight: 700;
  color: #1f2328;
  margin-bottom: 12rpx;
}

.analysis-answer {
  font-size: 26rpx;
  color: #6b7280;
  margin-bottom: 8rpx;
}

.analysis-correct {
  font-size: 26rpx;
  color: #059669;
  margin-bottom: 8rpx;
}

.analysis-explain {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.5;
}

.footer {
  height: 80rpx;
  background: #ffffff;
  border-top: 1rpx solid #e5e7eb;
  display: flex;
  align-items: center;
  justify-content: center;
}

.time {
  font-size: 24rpx;
  color: #6b7280;
}
